@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Tracking SV</h1>
    <p class="lead">Tracking SV es tu mejor empresa para rastrear el movimiento de tus valiosos pedidos On-Line.</p>
    @using (Html.BeginForm("Rastrear", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group form-group-lg">
            <div class="col-lg-12">
                <input class="form-control" type="text" id="TrackingNo" placeholder="Numero de Seguimiento">
            </div>
        </div>
        <div class="form-group form-group-lg">
            <div class="col-md-6 col-md-offset-3">
                <button type="submit" class="btn btn-primary btn-lg btn-principal">¿Donde esta mi paquete?</button>
            </div>
        </div>
    }
</div>